      <font>
         <Font name="Verdana Bold" size="14.0" />
      </font>
      <tooltip>
         <Tooltip fx:id="tooltip" showDelay="0s" showDuration="99999s" text="...">
            <font>
               <Font name="Victor Mono Regular" size="15.0" />
            </font>
         </Tooltip>
      </tooltip>
   </Label>
   <Button fx:id="refresh" alignment="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#refresh" GridPane.columnIndex="1">
      <graphic>
         <ImageView fitHeight="8.0" fitWidth="8.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@refresh.png" />
         </ImageView>
      </graphic>
   </Button>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
      <ColumnConstraints hgrow="NEVER" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
